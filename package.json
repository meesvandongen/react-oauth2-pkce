{
	"name": "react-oauth2-pkce-monorepo",
	"private": true,
	"version": "0.1.0",
	"scripts": {
		"start": "pnpm --filter e2e-test-app start",
		"build": "pnpm --filter react-oauth2-code-pkce build && pnpm --filter e2e-test-app build",
		"test": "pnpm --filter react-oauth2-code-pkce test",
		"test:e2e": "pnpm --filter e2e-tests test",
		"test:e2e:ui": "pnpm --filter e2e-tests test:ui",
		"test:e2e:headless": "pnpm --filter e2e-tests test:headless",
		"test:e2e:debug": "pnpm --filter e2e-tests test:debug",
		"typecheck": "pnpm --filter \"*\" typecheck",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"playwright:install": "pnpm --filter e2e-tests playwright:install"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.8",
		"typescript": "5.6.3"
	}
}
